{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps" : [
    {
      "name"      : "growmat",
      "script"    : "services/growmat/growmat.js",
      "watch"     : false,
      "env_production" : {
        "PORT": 80,
        "NODE_ENV": "production"
      },
      "env_dev" : {
        "PORT": 8080,
        "NODE_ENV": "development"
      }
    },

    {
      "name"      : "stream",
      "script"    : "services/live-stream/stream.js",
      "watch"     : false,
      "env_production" : {
        "WEB_PORT"    : 443,
        "STREAM_PORT" : 8081,
        "NODE_ENV": "production"
      },
      "env_dev" : {
        "WEB_PORT"    : 8443,
        "STREAM_PORT" : 8081,
        "NODE_ENV": "development"
      }
    },

    {
      "name"             : "ffmpeg",
      "script"           : "services/live-stream/ffmpeg.sh",
      "exec_interpreter" : "bash",
      "exec_mode"        : "fork",
      "watch"            : false,
      "env_production"   : {
        "STREAM_PORT" : 8081
      },
      "env_dev"   : {
        "STREAM_PORT" : 8081
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy" : {
    "production" : {
      "user" : "pi",
      "host" : "192.168.0.172",
      "ref"  : "origin/stable",
      "repo" : "https://pesu@bitbucket.org/pesu/growmat.git",
      "path" : "/home/pi/growmat",
      "post-deploy" : "npm install --production && npm restart"
    }
    // ,
    // dev : {
    //   user : 'pi',
    //   host : '192.168.0.172',
    //   ref  : 'origin/master',
    //   repo : 'https://pesu@bitbucket.org/pesu/growmat.git',
    //   path : '/var/local/growmat/development',
    //   'post-deploy' : 'npm install && pm2 reload ecosystem.config.js --env dev',
    //   env  : {
    //     NODE_ENV: 'dev'
    //   }
    // }
  }
}
