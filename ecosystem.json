{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps" : [
    {
      "name"      : "growmat",
      "script"    : "growmat.js",
      "env_production" : {
        "PORT": 443,
        "NODE_ENV": "production"
      },
      "env_dev" : {
        "PORT": 8080,
        "NODE_ENV": "development"
      }
    }

    // {
