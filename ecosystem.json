  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy" : {
    "production" : {
      "user" : "pi",
      "host" : "192.168.0.172",
      "ref"  : "origin/stable",
      "repo" : "https://pesu@bitbucket.org/pesu/growmat.git",
      "path" : "/var/local/growmat",
      "post-deploy" : "npm install --production && pm2 restart ecosystem.json --env production"
    }
