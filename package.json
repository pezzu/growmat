{
  "name": "growmat",
  "version": "1.0.0",
  "description": "Lorem ipsum",
  "author": "peter.sukhenko@gmail.com",
  "main": "growmat.js",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=1.4.28"
  },
  "scripts": {
    "deploy": "node deploy/update.js deploy",
    "monitor": "nodemon --ignore public/ --ignore services/ ./growmat.js 8080",
    "postinstall": "bower install --config.interactive=false && node conf/pi-install.js",
    "restart": "sudo node_modules/.bin/forever list | grep growmat.js | grep -v grep && npm stop; npm start",
    "start": "sudo node_modules/.bin/forever start growmat.js 80; sudo node_modules/.bin/forever start stream.js 443",
    "stop": "sudo node_modules/.bin/forever stop growmat.js; sudo node_modules/.bin/forever stop stream.js"
  },
  "repository": {
    "type": "git",
    "url": "https://pesu@bitbucket.org/pesu/growmat"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "bower": "^1.8.0",
    "detect-rpi": "^1.2.0",
    "express": "^4.15.3",
    "forever": "^0.15.3",
    "node-schedule": "^1.2.3",
    "ws": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0"
  },
  "piDependencies": {
    "node-dht-sensor": "^0.0.32",
    "rpi-gpio": "^0.8.1"
  }
}
